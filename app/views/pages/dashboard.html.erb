<div class="row">
	<!-- Profile Info -->
	<div class="col-md-2">
	<h1><%= @user.name%></h1>
	<%= gravatar_tag @user.email, size: 150%>
	</div>

	<div class="col-md-5">
	<!-- Places -->
	<h1>My Places</h1>
	<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Created</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
	<% @places.each do |place| %>
		<tr>
		<td><%= place.name%></td>
		<td><%= time_ago_in_words(place.created_at)%> ago</td>
		<td><%= link_to "Edit", edit_place_path(place) %> | <%= link_to "Destroy", place_path(place), method: :delete%></td>
		</tr>
	<% end %>
	</tbody>
	</table>
	<%= link_to "New Place", new_place_path %>
	</div>
	<!-- Reviews -->
	<div class="col-md-5">

	<h1>My Reviews</h1>
	<table class="table">
		<thead>
			<tr>
			<th>Place</th>
			<th>Created</th>
			<th>Rating</th>
			<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @reviews.each do |review| %>
			<tr>
				<td><%= review.place.name %></td>
				<td><%= time_ago_in_words(review.created_at) %> ago</td>
				<td><div class="score_<%=review.id %>"></div></td>
				<td><%= link_to "Edit", edit_review_path(review) %> | <%= link_to "Destroy", review_path(review), method: :delete%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>
<script type="text/javascript">
	<% @reviews.each do |review| %>
	$(".score_<%= review.id%>").raty(
	{
	  starOn: "<%= image_path('star-on.png')%>",
	  starOff: "<%= image_path('star-off.png')%>",
	  score: <%= review.score%>,
	  readOnly: true
	});
	<% end %>
</script>