

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
<h2 class="text-center">Log in</h2>
<%= f.input :email, required: false, autofocus: true, placeholder: "Please Enter You Email", label: false, input_htm: {class: "form-control"}  %>
<%= f.input :password, required: false, placeholder: "Please Enter Your Password", label: false, input_htm: {class: "form-control"} %>
<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
<%= f.button :submit, "Log in" %>
<% end %>

<%= render "devise/shared/links" %>
