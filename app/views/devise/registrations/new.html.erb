

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
  <h2 class="text-center">Sign up</h2>
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "User Name", input_html: {class: "form-control"} %>
    <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , label: false, placeholder: "Password"%>
    <%= f.button :submit, "Sign up" %>
<% end %>

<%= render "devise/shared/links" %>
